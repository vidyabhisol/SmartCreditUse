<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp" >

	<TextView
	    android:id="@+id/cardpaymentlistitem_textViewDate"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_toStartOf="@+id/cardpaymentlistitem_textViewAmtPaid"
	    android:padding="2dp"
	    android:text="@string/cardtranlistitem_date"
	    android:textAppearance="?android:attr/textAppearanceMedium"
	    android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/cardpaymentlistitem_textViewAmtPaid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:gravity="left"
        android:padding="2dp"
        android:text="@string/cardtranlistitem_tranamt"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white" />

</RelativeLayout>
